{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "cloudxpert": {
                "username": "$CONTAINER_REGISTRY_USERNAME_cloudxpert",
                "password": "$CONTAINER_REGISTRY_PASSWORD_cloudxpert",
                "address": "cloudxpert.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "HmtSensorUnit": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.HmtSensorUnit.debug}",
              "createOptions": {
                "HostConfig": {
                  "Privileged": true
                }
              }
            }
          },
          "ControlGateway": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.ControlGateway.debug}",
              "createOptions": {
                "HostConfig": {
                  "Privileged": true
                }
              }
            }
          },
          "WaterValveUnit": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.WaterValveUnit.debug}",
              "createOptions": {
                "HostConfig": {
                  "Privileged": true
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "HmtSensorUnitToControlGateway": "FROM /messages/modules/HmtSensorUnit/outputs/temperatureOutput INTO BrokeredEndpoint(\"/modules/ControlGateway/inputs/input1\")",
          "ControlGatewayToWaterValveUnit": "FROM /messages/modules/ControlGateway/outputs/output1 INTO BrokeredEndpoint(\"/modules/WaterValveUnit/inputs/input1\")",
          "ControlGatewayToIoTHub": "FROM /messages/modules/ControlGateway/outputs/remote INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "HmtSensorUnit": {
      "properties.desired": {
        "FullMoistureBaseLineValue": 480
      }
    },
    "ControlGateway": {
      "properties.desired": {
        "TemperatureThreshold": 30,
        "MoistureThreshold": 10
      }
    }
  }
}